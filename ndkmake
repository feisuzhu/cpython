#!/bin/bash -x

. ./ndkenv

cat <<EOF > /tmp/python-config.site
ac_cv_file__dev_ptmx=no
ac_cv_file__dev_ptc=no
EOF

./configure CONFIG_SITE=/tmp/python-config.site --host $TARGET --build=x86_64-unknown-linux-gnu --enable-shared --enable-ipv6 --prefix=$(pwd)/py/host --with-openssl=$HOME/androidlibs/openssl/arm64
make -j16
